/*
 * -------------------------------------------------
 *  NF-variant config file
 * -------------------------------------------------
 * Default config options
 *
 */

params {

    // Core input / output
    indivs_file  = "/path/to/indivs.LIST"
    chromos_file = "/path/to/chromos.LIST"
    ref_file     = "/path/to/reference.fasta"

    // Reads location and naming
    // By default, expects: <indiv>_R1.fastq.gz and <indiv>_R2.fastq.gz
    readsdir      = "/path/to/reads_folder/"
    reads_suffix1 = "_R1.fastq.gz"
    reads_suffix2 = "_R2.fastq.gz"

    // (Legacy) BAM-related params â€“ no longer used in iterative mapping workflow,
    // but kept here for compatibility/documentation.
    inputdir = "/path/to/reads_or_bam_folder/"
    bams_fn  = ".bam"   // unused in the new bwa-mem iterative mapping

    outputdir = "/path/to/output_folder/"

    // Sex chromosomes (for coverage summary script)
    sex_chromos = ['ctg_008_X']

    // Iterative mapping / consensus settings
    n_rounds          = 1      // total number of mapping+consensus rounds
    calc_coverage     = true   // estimate coverage (per round)
    indiv_var_call    = true
    call_consensus    = true
    calc_missing_data = true   // run missing data stats on final consensus

    // For the sequencing depth plots, how many indivs per row?
    // NOTE: Ensure that each row has roughly the same number of indivs otherwise the last row is deformed
    plots_per_row = 7

    // Settings for variant calling and filtering
    filt_indels = true   // remove indels (recommended for iterative mapping with same coordinates)

    // Create mask files to exclude sites from consensus sequence
    mask_hets    = true
    mask_cov     = true
    mask_min_cov = 3
    mask_max_cov = 200
}


// Cluster specific profiles that faciliate job scheduling and cluster requirements
profiles {

    curta {
       //Freie Universitat cluster
        includeConfig 'config/curta.config'
    }
    
    mendel {
       //AMNH mendel cluster
        includeConfig 'config/mendel.config'
    }
}
